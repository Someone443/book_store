%main.container
  %a.general-back-link{href: books_path}
    %i.fa.fa-long-arrow-left.mr-15
    Back to results
  .row
    .col-sm-6
      .product-gallery
        .mb-20
          %img.img-responsive{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
        .images.clearfix
          %a.img-link{href: "#"}
            %img{src: "https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-book-5-2-large.jpg"}
          %a.img-link{href: "#"}
            %img{src: "https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-book-5-2-large.jpg"}
          %a.img-link{href: "#"}
            %img{src: "https://www.smashingmagazine.com/wp-content/uploads/2015/09/smashing-book-5-2-large.jpg"}
    .col-sm-6
      %h1.mt-res-0= @book.title
      %p.lead.small= @book.authors
      .row
        .col-xs-12.col-md-4
          %p.h1.in-gold-500.mt-10.price= @book.price
        .col-xs-5.col-md-3
          .input-group.general-position
            %a.input-link{href: "#", onclick: "return false;"}
              %i.fa.fa-minus.line-height-40
            %input.form-control.quantity-input{type: "number", min: "1", value: "1"}
            %a.input-link{href: "#", onclick: "return false;"}
              %i.fa.fa-plus.line-height-40
        .col-xs-7.col-md-5
          %button.btn.btn-default.pull-right.general-position Add to Cart
      .general-info-wrap.divider-lg
        %p Description
        - if @book.description.size <= 250
          %p#book_description.lead.small.line-height-2
            = "#{@book.description}"
        - else
          %p#book_description.collapse.lead.small.line-height-2{'aria-expanded': "false"}
            = "#{@book.description}"       
          %p.lead
            %a.in-gold-500.lead.small.line-height-2.collapsed{href: "#book_description", 'data-toggle': "collapse"}
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left Year of publication
          %p.lead.small.pull-right 2016
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left Dimensions
          %p.lead.small.pull-right H:6.4\" x W: 0.9\" x D: 5.0
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left Materials
          %p.lead.small.pull-right Hardcove, glossy paper
  = render :partial => 'books/show_review_form'
  = render :partial => 'books/show_reviews'
